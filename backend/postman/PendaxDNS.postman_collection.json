{
  "info": {
    "name": "Pendax DNS + Webhook",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Check availability",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/v1/dns/available/{{name}}",
          "host": ["{{baseUrl}}"],
          "path": ["api","v1","dns","available","{{name}}"]
        }
      }
    },
    {
      "name": "Register DNS",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"subdomain\": \"mybot\",\n  \"ip\": \"167.99.12.45\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/dns/register",
          "host": ["{{baseUrl}}"],
          "path": ["api","v1","dns","register"]
        }
      }
    },
    {
      "name": "TradingView Webhook (demo)",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"symbol\": \"BTCUSDT\",\n  \"side\": \"buy\",\n  \"secret\": \"{{webhookSecret}}\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/webhook",
          "host": ["{{baseUrl}}"],
          "path": ["api","v1","webhook"]
        }
      },
      "response": []
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:4000" },
    { "key": "token", "value": "" },
    { "key": "name", "value": "mybot" },
    { "key": "webhookSecret", "value": "" }
  ]
}

